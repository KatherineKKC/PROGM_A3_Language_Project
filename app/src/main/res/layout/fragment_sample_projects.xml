<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rc_projectss"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_create_project"
    tools:context=".ui.SampleProjectsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc_projects"
        android:layout_width="409dp"
        android:layout_height="729dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/item_projects">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/tv_message_project"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:text="@string/tv_message_project"
        android:textColor="@color/deep_pink"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/rc_projects"
        app:layout_constraintStart_toStartOf="@+id/rc_projects"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>